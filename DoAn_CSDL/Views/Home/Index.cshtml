            <div class="work-follow--content" id="nhan">
                <a href="/HopDong/QuanLy" class="work-follow--link">
                    <div class="number-container">
                        <p>@Model[0]</p>
                    </div>
                    <div class="text-container">
                        <p>Hợp đồng đã được tạo</p>
                    </div>
                </a>
                <a href="/HopDong/QuanLy/0" class="work-follow--link">
