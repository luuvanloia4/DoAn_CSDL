                    <div class="number-container">
                        <p>@Model[2]</p>
                    </div>
                    <div class="text-container">
                        <p>Hợp đồng đã hoàn thành</p>
                    </div>
                </a>
            </div>
        </div>

        <div class="work-follow @(Model[6] == 3? "d-none": "")">
