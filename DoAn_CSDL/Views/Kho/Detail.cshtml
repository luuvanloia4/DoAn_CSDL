<script>
    var detailObj;
    const ctrlName = "/Kho/";
    var id;
    var isAdmin = @isAdmin;
    loadingCount = 0; //For multiple loading progress

    function FillData(obj) {
        htmlResult = "<tbody>"
        htmlResult += "\
        <tr>\
            <th>Mã kho hàng:</th>\
            <td>" + obj.ID + "</td>\
        </tr>";
        htmlResult += "\
